<html>
    <body>
        <div class="error">
            <%if(validationErrors){%>
                <ul>
                    <%for(var i = 0; i < validationErrors.length; i++){%>
                        <li><%=validationErrors[i].param%> - <%=validationErrors[i].msg%></li>
                    <%}%>
                </ul>
            <%}%>
        </div>
        <form action="/products" method="post">
            <div>
                <label for="title">Title</label>
                <input type="text" id="title" name="title" placeholder="Title" value="<%=product.title%>"/>
            </div>
            <div>
                <label for="price">Price</label>
                <input type="text" id="price" name="price" placeholder="0.00" value="<%=product.price%>"/>
            </div>
            <div>
                <label for="description">Description</label>
                <textarea cols="20" rows="5" id="description" name="description" placeholder="Description"><%=product.description%></textarea>
            </div>
            <div>
                <input type="submit" value="Save" />
            </div>
        </form>
    </body>
</html>